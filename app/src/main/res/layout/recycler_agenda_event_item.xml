<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
		<LinearLayout
			android:id="@+id/front_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_marginLeft="4dp"
			android:layout_marginStart="4dp"
			android:orientation="vertical"
            android:background="@color/md_green_400">

			<TextView
				android:id="@+id/view_agenda_event_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:text="8:45-11:00"/>

			<TextView
				android:id="@+id/view_agenda_event_title"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:textColor="@android:color/white"
				android:textSize="16sp"/>

			<TextView
				android:drawableLeft="@drawable/img_location"
				android:id="@+id/view_agenda_event_location"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/white"
				android:textSize="12sp"/>

		</LinearLayout>
</FrameLayout>